[Global]
Name = {{ server_name }}
Info = Interested Participant IRC
Password = "{{ server_password.stdout }}"
Listen = 0.0.0.0
Ports = {{ irc_port_internal }}
SSLPorts = 6697
SSLCertFile = /etc/letsencrypt/live/{{ server_name }}/fullchain.pem
SSLKeyFile = /etc/letsencrypt/live/{{ server_name }}/privkey.pem
MotdFile = /etc/ngircd/motd
DNS = no
Ident = no

[Limits]
MaxConnections = 200
MaxConnectionsIP = 20

[Operator]
Name = admin
Password = {{ oper_password.stdout }}

[Channel]
Name = #public
Topic = Welcome to #public
